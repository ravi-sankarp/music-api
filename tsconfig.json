{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2021",
    "module": "Node16",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
